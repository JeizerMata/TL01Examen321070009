<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollViewMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#121212"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    android:scrollbarStyle="outsideOverlay"
    android:overScrollMode="always"
    android:paddingBottom="80dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="40dp"
        android:gravity="center_horizontal">

        <!-- ðŸŸ© TÃ­tulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:text="Registro de Contacto"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- ðŸŸ¦ Tarjeta contenedora -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/dark_card"
            android:elevation="6dp"
            android:padding="14dp"
            android:clipToPadding="false"
            android:layout_marginBottom="16dp">

            <!-- Imagen -->
            <ImageView
                android:id="@+id/imageViewContacto"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher_round"
                android:scaleType="centerCrop"
                android:background="@drawable/dark_image_border"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnSeleccionarImagen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Seleccionar imagen"
                android:textAllCaps="false"
                android:backgroundTint="#3949AB"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="10dp"
                android:minHeight="38dp"
                android:paddingHorizontal="12dp" />

            <!-- PaÃ­s -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PaÃ­s"
                android:textStyle="bold"
                android:textColor="#E0E0E0"
                android:layout_marginBottom="2dp" />

            <Spinner
                android:id="@+id/spinner"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="@drawable/dark_input"
                android:layout_marginBottom="8dp" />

            <!-- Nombre -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textStyle="bold"
                android:textColor="#E0E0E0"
                android:layout_marginBottom="2dp" />

            <EditText
                android:id="@+id/editTextNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ingrese el nombre completo"
                android:textColorHint="#9E9E9E"
                android:textColor="#FFFFFF"
                android:background="@drawable/dark_input"
                android:padding="10dp"
                android:layout_marginBottom="8dp"
                android:inputType="textPersonName" />

            <!-- TelÃ©fono -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TelÃ©fono"
                android:textStyle="bold"
                android:textColor="#E0E0E0"
                android:layout_marginBottom="2dp" />

            <EditText
                android:id="@+id/editTextTelefono"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ejemplo: +504 9999-9999"
                android:textColorHint="#9E9E9E"
                android:textColor="#FFFFFF"
                android:background="@drawable/dark_input"
                android:padding="10dp"
                android:layout_marginBottom="8dp"
                android:inputType="phone" />

            <!-- Nota -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nota"
                android:textStyle="bold"
                android:textColor="#E0E0E0"
                android:layout_marginBottom="2dp" />

            <EditText
                android:id="@+id/editTextNota"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escriba una nota adicional"
                android:textColorHint="#9E9E9E"
                android:textColor="#FFFFFF"
                android:background="@drawable/dark_input"
                android:padding="10dp"
                android:minLines="2"
                android:inputType="textMultiLine"
                android:layout_marginBottom="10dp" />

            <!-- Botones -->
            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Guardar contacto"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#1E88E5"
                android:layout_marginBottom="6dp"
                android:minHeight="42dp" />

            <Button
                android:id="@+id/btnVerContactos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver contactos"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:backgroundTint="#455A64"
                android:minHeight="42dp" />
        </LinearLayout>

        <!-- Espacio de seguridad inferior -->
        <View
            android:layout_width="match_parent"
            android:layout_height="120dp" />
    </LinearLayout>
</ScrollView>
