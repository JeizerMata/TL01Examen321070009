<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212"
    android:paddingVertical="12dp"
    android:paddingHorizontal="20dp"
    android:fitsSystemWindows="true"
    android:clipToPadding="false"
    tools:context=".ListaContactosTL01Examen321070009">

    <!-- ðŸ”™ BotÃ³n AtrÃ¡s -->
    <Button
        android:id="@+id/btnAtras"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="â† AtrÃ¡s"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:backgroundTint="#2E7D32"
        android:paddingHorizontal="16dp"
        android:textSize="14sp"
        android:layout_gravity="start"
        android:layout_marginBottom="10dp" />

    <!-- ðŸ” Barra de bÃºsqueda -->
    <EditText
        android:id="@+id/editBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Buscar contacto..."
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#9E9E9E"
        android:background="@drawable/dark_input"
        android:padding="12dp"
        android:layout_marginBottom="10dp" />

    <!-- ðŸ“‹ Lista de contactos -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="6dp"
        android:background="#1E1E1E"
        android:elevation="4dp"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:clipToPadding="false">

        <ListView
            android:id="@+id/listViewContactos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#303030"
            android:dividerHeight="1dp"
            android:scrollbarStyle="outsideOverlay"
            android:clipToPadding="false"
            android:padding="4dp" />
    </LinearLayout>

    <!-- ðŸ§­ Botones fila 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:layout_marginBottom="8dp"
        android:layout_marginHorizontal="8dp"> <!-- âœ… margen lateral agregado -->

        <Button
            android:id="@+id/btnCompartir"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Compartir"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1565C0"
            android:layout_marginEnd="6dp"
            android:textSize="14sp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btnVerImagen"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Ver imagen"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#00897B"
            android:layout_marginStart="6dp"
            android:textSize="14sp"
            android:elevation="2dp" />
    </LinearLayout>

    <!-- ðŸ§­ Botones fila 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="2"
        android:layout_marginHorizontal="8dp"> <!-- âœ… margen lateral agregado -->

        <Button
            android:id="@+id/btnEliminar"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Eliminar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#C62828"
            android:layout_marginEnd="6dp"
            android:textSize="14sp"
            android:elevation="2dp" />

        <Button
            android:id="@+id/btnEditar"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="Editar"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#9C27B0"
            android:layout_marginStart="6dp"
            android:textSize="14sp"
            android:elevation="2dp" />
    </LinearLayout>

    <!-- ðŸ§© Espacio seguro final -->
    <View
        android:layout_width="match_parent"
        android:layout_height="80dp" />
</LinearLayout>
